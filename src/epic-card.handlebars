 <style type="text/css">
         .border-story-{{style_wiNumber}} {
            border: 2px solid #000000;
        } 
        .container {
            width: 750px;
            font-family: sans-serif;
            page-break-inside: avoid;
            margin-left: 15px;
            margin-top: 20px;
        }
        .title-and-description-container {
            margin: 15px 15px 5px 15px;
            display: flex;
            justify-content: space-between;
        }
        .title-text {
            font-size: 20px;
            margin-top: 5px;
            font-weight: bold;
            width: 580px;
        }
        .description {
            margin-top:20px;
        }
        .space-block
        {
            margin-top: 5px;
            margin-left: 15px;
            margin-right: 15px;
            width: 580px;
            display: block;
        }
        .tag-container {
            justify-content: space-between;
            margin-left: 15px;
            margin-right: 15px;
            font-size: 14px;
            background-color: lightgray;
            border: none;
            color: black;
            padding: 10px 10px;
            text-align: center;
            text-decoration: none;
            display: block;
            border-radius: 10px;
        }
        .vsts-number {
            display: flex;
            font-size: 15px;
        }
        hr {
            display: block;
            height: 1px;
            border: 0;
            border-top: 1px solid lightgray;
            margin: 1em 0;
            padding: 0;
        }
        .icon-image {
            padding: 5px;
            height: 30px;
            width: 30px;
        }
        .child-container {
            border: 1px soliD lightgray;
            text-align: left;
            padding: 8px;
        }
</style>
<div class="container border-story-{{style_wiNumber}}">
  <div class="title-and-description-container">
    <div class="title-container">
      <div class="vsts-number">
        <img src="{{icon}}" class="icon-image"/>
        <div class="title-text">{{title}}</div>
        <div class="tag-container">{{tags}}</div>
      </div>
      <hr>
      <div class="description">{{{description}}}</div>
    </div>
  </div>
  <div class="child-container">{{{children}}}</div> 
</div>